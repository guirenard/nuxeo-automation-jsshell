<component name="org.nuxeo.ecm.platform.jshell.actions">

  <require>org.nuxeo.ecm.platform.actions</require>

  <extension target="org.nuxeo.ecm.platform.actions.ActionService"
    point="actions">

    <action id="JSShell" link="nuxeo.shell();return false;"
    label="Nuxeo Shell" type="template" order="3000"
    icon="/img/nxshell.png">
      <category>MAIN_TABS</category>
      <filter-id>only_for_manager</filter-id>
      <properties>
        <property name="template">/incl/action/action_js_template.xhtml</property>
      </properties>
    </action>

  </extension>

</component>
